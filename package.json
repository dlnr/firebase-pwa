{
  "name": "firebase-pwa",
  "version": "0.0.1",
  "description": "Template for my firebase projects",
  "scripts": {
    "build": "run-s clean static css inline rollup workbox",
    "clean": "shx rm -rf build",
    "css": "postcss --output /tmp/styles.css src/styles.css",
    "deploy": "run-s build firebase-deploy",
    "firebase-deploy": "firebase deploy --only hosting,functions",
    "firebase-serve": "firebase serve --only hosting,functions",
    "inline": "regex-replace '\\/\\*styles\\*\\/' \"$(cat /tmp/styles.css)\" build/partials/",
    "lint": "eslint --ext='.js,.mjs' .",
    "rollup": "rollup --config rollup.config.js",
    "serve": "run-s build firebase-serve",
    "static": "shx cp -r 'src/static' build",
    "emulate": "firebase emulators:start",
    "workbox": "workbox injectManifest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dlnr/firebase-pwa.git"
  },
  "author": "DLN Roozemond",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dlnr/firebase-pwa/issues"
  },
  "homepage": "https://github.com/dlnr/firebase-pwa#readme",
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.27.0",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "cssnano": "^5.1.7",
    "eslint": "^8.13.0",
    "firebase-tools": "^10.6.0",
    "html-escaper": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-css-variables": "^0.18.0",
    "regex-replace": "^2.3.1",
    "regexparam": "^2.0.0",
    "rollup": "^2.70.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-string": "^3.0.0",
    "shx": "^0.3.4",
    "workbox": "^0.0.0",
    "workbox-cacheable-response": "^6.5.2",
    "workbox-cli": "^6.5.2",
    "workbox-core": "^6.5.2",
    "workbox-expiration": "^6.5.2",
    "workbox-precaching": "^6.5.2",
    "workbox-routing": "^6.5.2",
    "workbox-strategies": "^6.5.2",
    "workbox-streams": "^6.5.2"
  }
}
